# Zeropoint Protocol - Backend Environment Variables Example
# Copy this file to .env.backend and fill in your actual values
# NEVER commit .env.backend to the repository

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/zeropoint
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Service URLs
TINYGRAD_API_URL=https://tinygrad.zeropointprotocol.ai
PETALS_API_URL=https://petals.zeropointprotocol.ai
WONDERCRAFT_API_URL=https://wondercraft.zeropointprotocol.ai

# API Keys (obtain from respective services)
TINYGRAD_API_KEY=your_tinygrad_api_key_here
PETALS_API_KEY=your_petals_api_key_here
WONDERCRAFT_API_KEY=your_wondercraft_api_key_here

# Cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Feature Flags
MOCKS_DISABLED=1
TRAINING_ENABLED=1
SYNTHIENTS_ACTIVE=1
GOVERNANCE_MODE=dual-consensus
PHASE=stage2

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Session & Security
SESSION_SECRET=generate_a_secure_random_string_here
JWT_SECRET=generate_a_secure_random_string_here
