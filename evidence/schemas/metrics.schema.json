{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["run_id", "model", "started_at", "ended_at", "dataset", "metrics"],
  "properties": {
    "run_id": { "type": "string" },
    "model": { "type": "string" },
    "started_at": { "type": "string", "format": "date-time" },
    "ended_at": { "type": "string", "format": "date-time" },
    "dataset": { "type": "string" },
    "metrics": {
      "type": "object",
      "required": ["loss", "accuracy"],
      "properties": {
        "loss": { "type": "number" },
        "accuracy": { "type": "number" }
      }
    },
    "notes": { "type": "string" }
  }
}
