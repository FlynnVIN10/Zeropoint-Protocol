---
import Base from '../layouts/BaseLayout.astro';
const data = await fetch('/api/metrics').then(r=>r.json()).catch(()=>[]);
---
<Base title="Zeropoint Protocol">
  <h2>Live Metrics</h2>
  <div class="card"><table style="width:100%">
    <thead><tr><th align="left">Metric</th><th align="right">Value</th><th>Time</th></tr></thead>
    <tbody>
      {data.map((m:any)=><tr><td>{m.name}</td><td align="right">{m.value}</td><td>{m.ts}</td></tr>)}
    </tbody>
  </table></div>
</Base>
