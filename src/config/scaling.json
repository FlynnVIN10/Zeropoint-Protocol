{
  "maxAgents": 100,
  "maxConcurrency": 25,
  "maxRequestsPerSec": 50,
  "scalingThresholds": {
    "cpu": 80,
    "memory": 85,
    "responseTime": 2000,
    "errorRate": 5
  },
  "autoScaling": {
    "enabled": true,
    "minNodes": 1,
    "maxNodes": 10,
    "scaleUpThreshold": 75,
    "scaleDownThreshold": 25,
    "cooldownPeriod": 300
  },
  "loadBalancing": {
    "algorithm": "round-robin",
    "healthCheckInterval": 30,
    "failoverEnabled": true
  },
  "monitoring": {
    "metricsCollection": true,
    "alerting": true,
    "logRetention": 30
  },
  "soulchain": {
    "logScalingEvents": true,
    "consensusRequired": true,
    "minStakeForScaling": 100
  }
} 