{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Training Status Schema",
  "description": "Schema for /api/training/status endpoint (DB-fed latest)",
  "type": "object",
  "required": ["run_id", "epoch", "step", "loss", "duration_s", "commit", "ts"],
  "properties": {
    "run_id": { "type": "string" },
    "epoch": { "type": "integer", "minimum": 0 },
    "step": { "type": "integer", "minimum": 0 },
    "loss": { "type": "number" },
    "duration_s": { "type": "number", "minimum": 0 },
    "commit": { "type": "string" },
    "ts": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": true
}
