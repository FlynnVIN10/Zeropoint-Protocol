{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Synthiant Training Metrics Schema",
  "description": "Schema for validating Synthiant training metrics submissions",
  "type": "object",
  "required": ["synthiant_id", "run_id", "epoch", "step", "loss", "duration_s", "commit", "ts", "source"],
  "properties": {
    "synthiant_id": {
      "type": "string",
      "description": "Unique identifier for the Synthiant",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 3,
      "maxLength": 50
    },
    "run_id": {
      "type": "string",
      "description": "ISO 8601 timestamp of training run start",
      "format": "date-time"
    },
    "epoch": {
      "type": "integer",
      "description": "Training epoch number",
      "minimum": 1
    },
    "step": {
      "type": "integer",
      "description": "Training step within epoch",
      "minimum": 1
    },
    "loss": {
      "type": "number",
      "description": "Training loss value",
      "minimum": 0
    },
    "duration_s": {
      "type": "number",
      "description": "Training duration in seconds",
      "minimum": 0
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA of training code",
      "pattern": "^[a-f0-9]{7,40}$"
    },
    "ts": {
      "type": "string",
      "description": "ISO 8601 timestamp of metrics collection",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "description": "Training framework/source identifier",
      "enum": ["tinygrad", "pytorch", "tensorflow", "jax", "other"]
    },
    "device": {
      "type": "string",
      "description": "Training device identifier (optional)",
      "maxLength": 100
    },
    "notes": {
      "type": "string",
      "description": "Additional training notes (optional)",
      "maxLength": 500
    }
  },
  "additionalProperties": false
}
