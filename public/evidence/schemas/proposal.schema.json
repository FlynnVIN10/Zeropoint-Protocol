{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["proposal_id", "prompt", "created_at", "state"],
  "properties": {
    "proposal_id": { "type": "string" },
    "prompt": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "state": { "type": "string", "enum": ["pending", "approved", "vetoed"] }
  }
}
